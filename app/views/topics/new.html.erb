<header>
  <div class="contents-bg">
    <div class="contents">
      </br>
      </br>
      <h1>トピックの新規作成</h1>
      <p>~Let's talk to everyone!~</p>
    </div>
  </div>
</header>

<div class="container mt-5">
  <div class="row">
    <% if @topic.errors.present? %>
      <div class="errMessage">
        <h3>以下の内容を確認して、再度作成してください</h3>
          <ul>
          <% @topic.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
      </div>
    <% end %>

  </div>
</div>

<div class="container mt-5 ml-5">
  <div class="row">
    <%= form_for(@topic) do |f| %>
      <div class="form-group">
        <%= f.label :title, 'トピックタイトル' %>
        <%= f.text_area :title, size: "50*20", class:'form-control' %>
      </div>
      <%= f.submit '作成する', class: 'btn btn-success' %>
    <% end %>
  </div>
</div>

